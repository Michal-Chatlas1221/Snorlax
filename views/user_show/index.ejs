<h1>Followed shows</h1>

<ul>
  <% for (show in shows) { %>
    <% var link = "/show/"+ shows[show].id %>
    <li><a href=<%= link %> ><%= shows[show].name %></a></li>

    <input type="hidden" id="show-id" value=<%= shows[show].id %>>
    <a class="unfollow" href="/user_show">Unfollow</a>
  <% } %>

  <script>
    $('.unfollow').click(function(event) {
      $.ajax({
        url: '/user_show',
        method: 'delete',
        data: {
          showId: $('#show-id').val(),
        }
      });
    });
  </script>
</ul>
